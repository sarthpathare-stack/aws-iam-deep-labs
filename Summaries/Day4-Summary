"""
Day 4 - Resource-Based Policy Simulation
Simulating identity + resource policy evaluation
"""

def evaluate_access(identity_policy, resource_policy):
    if resource_policy == "Deny":
        return "DENIED: Resource policy explicit deny"
    if identity_policy == "Allow" and resource_policy == "Allow":
        return "ALLOWED: Identity + Resource policy aligned"
    return "DENIED: Missing allow on one side"


# Simulations
print("Resource Policy Evaluation")
print("--------------------------")

print("\nCase 1: Identity Allow + Resource Allow")
print(evaluate_access("Allow", "Allow"))

print("\nCase 2: Identity Allow + Resource Missing")
print(evaluate_access("Allow", None))

print("\nCase 3: Resource Explicit Deny")
print(evaluate_access("Allow", "Deny"))

print("\nCase 4: Identity Missing + Resource Allow")
print(evaluate_access(None, "Allow"))
